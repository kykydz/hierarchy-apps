{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "nodeVersionHint": 16,
            "name": "Debug Server",
            "type": "node",
            "request": "launch",
            "args": [
                "${workspaceRoot}/src/server.ts"
            ],
            "runtimeArgs": [
                "--nolazy",
                "-r",
                "ts-node/register"
            ],
            "cwd": "${workspaceRoot}",
            "protocol": "inspector",
            "internalConsoleOptions": "openOnSessionStart",
            "outputCapture": "std",
            "env": {
                "TS_NODE_PROJECT": "${workspaceFolder}/tsconfig.json"
            },
            "envFile": "${workspaceFolder}/.env"
        },
        {
            "nodeVersionHint": 16,
            "name": "Debug Cron - Send Birthday Email",
            "type": "node",
            "request": "launch",
            "args": [
                "${workspaceRoot}/index.ts"
            ],
            "runtimeArgs": [
                "--nolazy",
                "-r",
                "ts-node/register"
            ],
            "cwd": "${workspaceRoot}",
            "protocol": "inspector",
            "internalConsoleOptions": "openOnSessionStart",
            "outputCapture": "std",
            "env": {
                "TS_NODE_PROJECT": "${workspaceFolder}/tsconfig.json"
            },
            "envFile": "${workspaceFolder}/.env"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "npm test",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
              "run",
              "test"
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "debug test",
            "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/jest",
            "args": [
                "-i",
                "--runInBand",
                "--no-cache",
                "--verbose",
              ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        },
    ]
}